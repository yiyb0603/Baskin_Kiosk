<Page x:Class="Baskin_Kiosk.View.PaymentPage.Cash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Baskin_Kiosk.View.PaymentPage"
      mc:Ignorable="d" 
      d:DesignHeight="990" d:DesignWidth="1920"
      Title="Cash">

    <Grid>
        <StackPanel>
            <Label>현금 계산을 선택하셨습니다. 현금영수증카드를 제시해주세요</Label>
            <TextBox x:Name="resultLabel" Width='500' Margin="0 500 0 0" Text=""></TextBox>
            <Label x:Name="price" Content="총 금액: " HorizontalAlignment="Center"></Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="이전" Width="150" HorizontalAlignment="Left" Margin="0 100 800 0" Click="Prevbutton_Click"/>
                <Button Content="다음" Width="150" HorizontalAlignment="Left" Margin="0 100 0 0" Click="Nextbutton_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
